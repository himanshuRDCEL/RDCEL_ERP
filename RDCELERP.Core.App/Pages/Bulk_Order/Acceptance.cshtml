@page
@model RDCELERP.Core.App.Pages.Bulk_Order.AcceptanceModel
@{
    ViewData["Title"] = "Acceptance";
    Layout = "_Layout";
    RDCELERP.Model.Base.AccessRuleViewModel accessRule = (RDCELERP.Model.Base.AccessRuleViewModel)ViewBag.AccessRule;
    var URLPrefixforProd = ViewData["URLPrefixforProd"];
    var BaseUrl = ViewData["BaseUrl"];
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card border-0 shadow">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="fs-5 mb-0 card-title">
                                    <a href="#"></a>Price Acceptance
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" id="myForm">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-4 mb-4">
                                    <label class="" for="">Regd No<span style="color:red;">*</span></label>
                                    <input id="ddlBU" asp-for="AcceptanceViewModel.RegdNo" class="form-control" readonly />
                                    <span asp-validation-for="AcceptanceViewModel.RegdNo" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label class="" for="">UPI ID <span style="color:red;">*</span></label>
                                    <input id="ddlBU" asp-for="AcceptanceViewModel.UPIId" class="form-control" readonly />
                                    <span asp-validation-for="AcceptanceViewModel.UPIId" class="text-danger"></span>
                                </div>
                                <p class="text-danger" id="errormsg">@ViewData["Message"]</p>
                                <div class="col-md-4 mb-4">
                                    <label class="" for="">Pickup Date<span style="color:red;">*</span></label>
                                    <input asp-for="AcceptanceViewModel.PreferredPickupDate" class="form-control" readonly/>
                                    <span asp-validation-for="AcceptanceViewModel.PreferredPickupDate" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label class="" for=""> Pickup Time <span style="color:red;">*</span></label>
                                    <input type="text" asp-for="AcceptanceViewModel.PreferredPickupTime" class="form-control" readonly/>
                                    <span asp-validation-for="AcceptanceViewModel.PreferredPickupTime" class="text-danger"></span>

                                </div>

                                <div class="col-md-4 mb-4">
                                    <label class="" for=""> Price Grade <span style="color:red;">*</span></label>
                                    <input type="text" asp-for="AcceptanceViewModel.PriceGrade" class="form-control" readonly />
                                    <span asp-validation-for="AcceptanceViewModel.PriceGrade" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    @if (accessRule != null && accessRule.CanView)
                                    {
                                        <a href='javascript:history.go(-1)' class="btn btn-secondary">Back to List</a>

                                    }
                                </div>
                                <div class="col-6 text-end">
                                    @if (accessRule != null && accessRule.CanAdd)
                                    {
                                        <input type="submit" value="Accept" class="btn btn-primary mainshadow" />
                                    }
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
