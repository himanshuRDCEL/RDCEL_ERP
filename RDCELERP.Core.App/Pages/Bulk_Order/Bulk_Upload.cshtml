    // Exchange data table
    function DataTable(url, startDate, endDate) {
        table = $('#ExchangeDatatable').DataTable({
            "order": [[0, 'desc']],
            "processing": true,
            "serverSide": true,
            "scrollX": true,
            "paging": true,
            "filter": true,
