        function saveVideoOnBackend(videoBlob, srNum) {
            var videoFile = new File([videoBlob], 'video.webm', { type: 'video/webm' });
            $('#loader').show();
            var regdNo = $("#hdnRegdno").val();
            var file = videoFile;
            var isMediaTypeVideo = $("#hdnIsMediaTypeVideo_" + srNum).val();
            var imageLabelId = $("#hdnImageLabelId_" + srNum).val();
            var orderTransId = $("#hdnOrderTransId").val();
            var statusId = $("#hdnStatusId").val();

            var formData = new FormData();
            formData.append('regdNo', regdNo);
            formData.append('file', file);
            formData.append('isMediaTypeVideo', isMediaTypeVideo);
            formData.append('srNum', srNum);
            formData.append('imageLabelId', imageLabelId);
            formData.append('orderTransId', orderTransId);
            formData.append('statusId', statusId);

            $.ajax({
                type: 'POST',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                url: '@URLPrefixforProd/api/ExchangeOrders/CompressVideo',
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response != null) {
                        $('#videoPlaceHolder_' + srNum).hide();
                        $('#hdnBase64StringValue_' + srNum).val(response);
                        $('#loader').hide();
                    } else {
                        alert("Null Video Blob");
                    }
                },
            });
        }

