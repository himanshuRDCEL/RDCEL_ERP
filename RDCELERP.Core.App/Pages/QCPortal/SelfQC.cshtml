        function VideoTimer(_count) {
            var seconds = VideotimerSec;
            //var seconds = 60;
            var countdown = setInterval(function () {

                seconds--;
                if (seconds >= 0) {
                    $('#startButton_' + _count).text('Recording... ' + seconds + ' SEC remaining');
                } else {
                    clearInterval(countdown);
                }
            }, 1000);
        }

        function SaveFile(srNum) {

            var regdNo = $("#hdnRegdno").val();
            var orderTransId = $("#hdnOrderTransId").val();
            var statusId = $("#hdnStatusId").val();
            var base64String = $("#hdnBase64StringValue_" + srNum).val();
            var isMediaTypeVideo = $("#hdnIsMediaTypeVideo_" + srNum).val();
            var imageLabelId = $("#hdnImageLabelId_" + srNum).val();

            var formData = new FormData();
            formData.append('regdNo', regdNo);
            formData.append('base64String', base64String);
            formData.append('isMediaTypeVideo', isMediaTypeVideo);
            formData.append('srNum', srNum);
            formData.append('orderTransId', orderTransId);
            formData.append('statusId', statusId);
            formData.append('imageLabelId', imageLabelId);

            $.ajax({
                type: 'POST',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                url: "@URLPrefixforProd/QCPortal/SelfQC?handler=SaveMediaFile",
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (response) {
                    if(response == true){
                        $("#hdnBase64StringValue_" + srNum).val("File Saved Already");
                    }
                    console.log("File Save or Not: " + response);
                }
            });
        }

        function DeleteFile(srNum) {

            var regdNo = $("#hdnRegdno").val();
            var isMediaTypeVideo = $("#hdnIsMediaTypeVideo_" + srNum).val();

            var formData = new FormData();
            formData.append('regdNo', regdNo);
            formData.append('isMediaTypeVideo', isMediaTypeVideo);
            formData.append('srNum', srNum);

            $.ajax({
                type: 'POST',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                url: "@URLPrefixforProd/QCPortal/SelfQC?handler=DeleteMediaFile",
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log("File Deleted: " + response);
                }
            });
        }

