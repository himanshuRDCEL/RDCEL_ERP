@page
@model RDCELERP.Core.App.Pages.State.DeletStateById

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div class="row content-area">
    <!--For Lead details-->
    <div class="col-12">
        <div class="box">
            <hr />
            <dl class="row">
                <h5>
                    Are you sure you want to delete <b>@Html.DisplayFor(model => model.TblState.Name)</b>
                </h5>
            </dl>
            <form method="post">
                <input type="hidden" asp-for="TblState.StateId" />
                <input type="hidden" asp-for="TblState.Code" />
                <input type="hidden" asp-for="TblState.CreatedBy" />
                <input type="hidden" asp-for="TblState.CreatedDate" />
                <input type="hidden" asp-for="TblState.ModifiedBy" />
                <input type="hidden" asp-for="TblState.ModifiedDate" />
                <input type="hidden" asp-for="TblState.IsActive" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-primary mainshadow">Back to List</a>
            </form>
        </div>
    </div>
</div>


