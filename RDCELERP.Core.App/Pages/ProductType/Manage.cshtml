                                <input type="hidden" asp-for="ProductTypeViewModel.Id" id="hdnId" />
                                <input type="hidden" asp-for="ProductTypeViewModel.CreatedBy" />
                                <input type="hidden" asp-for="ProductTypeViewModel.CreatedDate" />
