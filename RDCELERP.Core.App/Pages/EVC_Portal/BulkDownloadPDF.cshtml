            var minStartDate = new Date(enddate);
            minStartDate.setDate(enddate.getDate() - differenceInDays);
            // Set the maximum date for the end date picker
            $("#startdate").datepicker("option", { minDate: minStartDate, maxDate: enddate });
        }

