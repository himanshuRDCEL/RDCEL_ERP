            $("#startdate").datepicker({
                defaultDate: null,
                onSelect: function (selectedDate) {
                    updateEndDate(selectedDate);
                }
            });

            $("#enddate").datepicker({
                defaultDate: null,
                onSelect: function (selectedDate) {
                    updateStartDate(selectedDate);
                }
            });
        }

