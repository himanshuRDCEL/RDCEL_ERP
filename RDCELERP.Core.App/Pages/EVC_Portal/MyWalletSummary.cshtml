@page
@model RDCELERP.Core.App.Pages.EVC_Portal.MyWalletSummaryModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    RDCELERP.Model.Base.AccessRuleViewModel accessRule = (RDCELERP.Model.Base.AccessRuleViewModel)ViewBag.AccessRule;
}
@{
    int? userId = Model.userId; // or set to the actual null value you want to pass
    
}
@if (ViewData["UserAuth"] != null)
{
    <script type="text/javascript">
        alert("@ViewData["UserAuth"]");
    </script>
}
<div class="row">

    <div class="col-12 col-sm-6 col-xl-4 mb-4">
        <div class="card border-0 shadow">
            <a href="/wallet.html">
                <div class="card-body">
                    <div class="row d-block d-xl-flex align-items-center">
                        <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                            <div class="icon-shape icon-shape-primary rounded me-4 me-sm-0">
                                <i class="fa-solid fa-wallet"></i>
                            </div>
                        </div>
                        <div class="col-xl-7 px-xl-0">

                            <h2 class="h6 text-gray-400 mb-0">Wallet Summary</h2>
                            <h3 class="fw-extrabold mb-2">₹ @Model.eVC_DashBoardViewModel.walletAmount</h3>

                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-4 mb-4">
        <div class="card border-0 shadow">
            <a href="#">
                <div class="card-body">
                    <div class="row d-block d-xl-flex align-items-center">
                        <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                            <div class="icon-shape icon-shape-primary rounded me-4 me-sm-0">
                                <i class="fa-solid fa-indian-rupee-sign"></i>
                            </div>
                        </div>
                        <div class="col-xl-7 px-xl-0">

                            <h2 class="h6 text-gray-400 mb-0">Clear Balance</h2>
                            <h3 class="fw-extrabold mb-2">₹ @Model.eVC_DashBoardViewModel.clearBalance</h3>

                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-4 mb-4">
        <div class="card border-0 shadow">
            <a href="#">
                <div class="card-body">
                    <div class="row d-block d-xl-flex align-items-center">
                        <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                            <div class="icon-shape icon-shape-primary rounded me-4 me-sm-0">
                                <i class="fa-solid fa-truck-fast"></i>
                            </div>
                        </div>
                        <div class="col-xl-7 px-xl-0">

                            <h2 class="h6 text-gray-400 mb-0">Total in progress</h2>
                            <h3 class="fw-extrabold mb-2">₹ @Model.eVC_DashBoardViewModel.Allocation</h3>

                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card border-0 shadow">
                    <div class="card-header card-header-wrapper">
                        <div class="row align-items-center card-title">
                            <div class="col-md-6">
                                <h2 class="fs-5 mb-0">
                                    STATEMENT
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row detailed-reporting">
                            @*<div class="pt-4"></div>*@
                            <div class="row">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h2 class="fs-5 fw-bold mb-0">Wallet Addition</h2>
                                        </div>
                                        <div class="col text-end">
                                           
                                            <a href="~/EVC_Portal/WalletAdditionOrUtilization?userId=@userId" class="btn btn-primary">See all</a>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="datatablebox table-responsive">
                                        <table id="leadtbl"
                                               class="table align-items-center table-flush"
                                               style="width:100%" border="0">
                                            <thead class="thead-light">
                                                <tr>
                                                    @*<th class="border-bottom" scope="col">EVC Registeration Id</th>*@
                                                    <th class="border-bottom" scope="col">Added Amount</th>
                                                    <th class="border-bottom" scope="col">Type</th>
                                                    <th class="border-bottom" scope="col">Added By</th>
                                                    <th class="border-bottom" scope="col">Date of Addition</th>
                                                    @*<th class="border-bottom" scope="col">GST Certificate</th>
                                                    <th class="border-bottom" scope="col">EWaste Certificate</th>*@
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var items in Model.myWalletSummaryAddition)
                                                {
                                                    <tr>
                                                        @*<td class="fw-bolder text-gray-500">
                                                    @items.EVCRegisterationId
                                                    </td>*@
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.Amount
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.type
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.AddedBy
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.FinalDate
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="pt-4"></div>
                            <div class="row">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h2 class="fs-5 fw-bold mb-0">Wallet Utilization</h2>
                                        </div>
                                        <div class="col text-end">
                                          
                                            <a href="~/EVC_Portal/eVCAllOrderList?userId=@userId" class="btn btn-primary">See all</a>
                                        
                                        </div>
                                    </div>
                                </div>

                                @*<div class="col-12">
                                <h5 class="sectitle">Wallet Utilization</h5>
                                </div>
                                <div class="col text-end">
                                <a href="~/EVC_Portal/eVCAllOrderList" class="btn btn-primary">See all</a>
                                </div>*@
                                <div class="col-12">
                                    <div class="datatablebox table-responsive">

                                        <table id="leadtbl"
                                               class="table align-items-center table-flush"
                                               style="width:100%" border="0">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th class="border-bottom" scope="col">Regd No</th>
                                                    <th class="border-bottom" scope="col">Partner code</th>
                                                    <th class="border-bottom" scope="col">order Amount</th>
                                                    <th class="border-bottom" scope="col">product detail</th>
                                                    @*<th class="border-bottom" scope="col">productCategoryName</th>*@
                                                    <th class="border-bottom" scope="col">Assign Date</th>
                                                    <th class="border-bottom" scope="col">inProgress Date</th>
                                                    <th class="border-bottom" scope="col">Complete Date</th>
                                                    @*<th class="border-bottom" scope="col">completeDate</th>*@
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var items in Model.lattestAllocationViewModels)
                                                {

                                                    <tr>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.regdNo
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.storecode
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.orderAmount
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.productTypeName - @items.productCategoryName
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                    @items.FinalDate
                                                    </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.dateInProg
                                                        </td>
                                                        <td class="fw-bolder text-gray-500">
                                                            @items.dateComplete
                                                        </td>
                                                        @*<td class="fw-bolder text-gray-500">
                                                    @items.completeDate
                                                    </td>*@
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-default" tabindex="-1" aria-labelledby="modal-default" style="display: none;"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="h6 modal-title">Photo at the time of QC</h2><button type="button" class="btn-close"
                                                                                   data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row modalpics">
                        <div class="col-md-4 mb-3">
                            <img class="d-inline" src="https://images.unsplash.com/photo-1630459065645-549fe5a56db4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cmVmcmlnZXJhdG9yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
                        </div>
                        <div class="col-md-4 mb-3">
                            <img class="d-inline" src="https://images.unsplash.com/photo-1630459065645-549fe5a56db4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cmVmcmlnZXJhdG9yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
                        </div>
                        <div class="col-md-4 mb-3">
                            <img class="d-inline" src="https://images.unsplash.com/photo-1630459065645-549fe5a56db4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cmVmcmlnZXJhdG9yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
                        </div>
                        <div class="col-md-4 mb-3">
                            <img class="d-inline" src="https://images.unsplash.com/photo-1630459065645-549fe5a56db4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cmVmcmlnZXJhdG9yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
                        </div>
                        <div class="col-md-4 mb-3">
                            <img class="d-inline" src="https://images.unsplash.com/photo-1630459065645-549fe5a56db4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cmVmcmlnZXJhdG9yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary ms-auto" data-bs-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteuser" tabindex="-1"
     role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mx-auto"
                    id="exampleModalLabel">
                    Are you sure to
                    delete this user?
                </h5>
            </div>

            <div class="modal-footer"
                 style="justify-content: center;">
                <button type="button"
                        class="btn btn-primary">
                    Delete
                </button>
                <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
